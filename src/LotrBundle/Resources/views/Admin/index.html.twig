{% extends "::base.html.twig" %}

{% block title %}LOTR - Back Office{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="page-header">
            <h1>LOTR - <small>An API to rule them all</small></h1>
        </div>
    </div>
    <div class="container">
        <section>
            <div class="row">
                {# Col md 6 #} {# Liste des personnages #}
                <div class="col-md-5">
                    <h2>Liste des personnages</h2>
                    <div class="table-responsive pull-left">
                        <table class="table table-bordered">
                            <tr>
                                <th>#</th>
                                <th>Slug</th>
                                <th>Name</th>
                                <th>Race</th>
                            </tr>
                            {% for character in characters %}
                                <tr>
                                    <td>{{ character.id }}</td>
                                    <td>{{ character.slug }}</td>
                                    <td>{{ character.name }}</td>
                                    <td>{{ character.race.slug |capitalize }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                        <h2>Liste des lieux</h2>
                        <table class="table table-bordered">
                            <tr>
                                <th>#</th>
                                <th>Slug</th>
                                <th>Name</th>
                                <th>Coordonnées X</th>
                                <th>Coordonnées Y</th>
                            </tr>
                            {% for place in places %}
                                <tr>
                                    <td>{{ place.id }}</td>
                                    <td>{{ place.slug }}</td>
                                    <td>{{ place.name }}</td>
                                    <td>{{ place.coordx }}</td>
                                    <td>{{ place.coordy }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
                {# END col md 6 #}
                {# Col md 6 #} {# Liste des events #}
                <div class="col-md-7">
                    <h2>Liste des événements</h2>
                    <div class="table-responsive pull-left">
                        <table class="table table-bordered">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Date début</th>
                                <th>Date fin</th>
                                <th>Coordonnées X</th>
                                <th>Coordonnées Y</th>
                            </tr>
                            {% for event in events %}
                                <tr>
                                    {#<td>{{ place.id }}</td>#}
                                    {#<td>{{ place.name }}</td>#}
                                    {#<td>{{ place.date }}</td>#}
                                    {#<td>{{ place.dateend }}</td>#}
                                    {#<td>{{ place.coordx }}</td>#}
                                    {#<td>{{ place.coordy }}</td>#}
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
                {# END col md 6 #}
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="http://code.jquery.com/jquery-1.12.0.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
{% endblock %}
